<Window x:Class="CheckboxStateApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkbox States" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <!-- Checkbox 1 (Checked/Unchecked) -->
            <CheckBox x:Name="CheckBox1" Content="Checkbox 1" FontSize="16" 
                      Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <TextBox x:Name="TextBox1" Margin="10" IsReadOnly="True" FontSize="14"/>

            <!-- Checkbox 2 (Checked/Unchecked/Indeterminate) -->
            <CheckBox x:Name="CheckBox2" Content="Checkbox 2" FontSize="16" 
                      IsThreeState="True" Checked="CheckBox2_Checked" Unchecked="CheckBox2_Unchecked" Indeterminate="CheckBox2_Indeterminate"/>
            <TextBox x:Name="TextBox2" Margin="10" IsReadOnly="True" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
